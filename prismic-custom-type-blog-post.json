{
    "Main": {
        "uid": {
            "type": "UID",
            "config": {
                "label": "UID",
                "placeholder": "unique-blog-post-slug"
            }
        },
        "title": {
            "type": "StructuredText",
            "config": {
                "label": "Title",
                "placeholder": "Blog post title",
                "single": "heading1",
                "allowTargetBlank": false
            }
        },
        "description": {
            "type": "Text",
            "config": {
                "label": "Description",
                "placeholder": "A brief description for SEO and preview"
            }
        },
        "published_date": {
            "type": "Date",
            "config": {
                "label": "Published Date",
                "placeholder": "Publication date"
            }
        },
        "featured_image": {
            "type": "Image",
            "config": {
                "label": "Featured Image",
                "constraint": {
                    "width": 1200,
                    "height": 630
                },
                "thumbnails": []
            }
        },
        "content": {
            "type": "StructuredText",
            "config": {
                "label": "Content",
                "placeholder": "Write your blog post content here...",
                "allowTargetBlank": true,
                "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
            }
        }
    }
}